<% include partials/header.ejs %>

<h1>INDEX PAGE!!</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2>
            <%= blog.title %>
            <img src="<%= blog.image %>">
            <span>
                <%= blog.created %>
            </span>
            <p>
                <%= blog.body.substring(0, 250) %> ...
            </p>
            <a href="/blogs/<%= blog._id %>">
                Read More
            </a>
        </h2>
    </div>
<% }); %>
